<p id="notice"><%= notice %></p>



<% if current_user %>
  <div class="card" style="width: 40rem;">
    <div class="card-block">
        <h1 class="card-title">Users</h1>

        <table class="table card-text">
          <thead>
            <tr>
              <th>Email</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% if current_user %>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
              <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>

        <br>
      </div>
    </div>
<% else %>
  <div class="card" style="width: 40rem;">
    <div class="card-block">
      <h1 class="card-title">Welcome to my Blog!</h4>
        <p class="card-text">Here you can create an user with your email, write articles, and even comment them ! Register please so you can see everything !</p>
        <%= link_to 'New User!', new_user_path, class: "btn btn-primary" %>
      </div>
    </div>
  <div class="card" style="width: 20rem;">
    <div class="card-block">
      <h1 class="card-title">Articles</h4>
      <p class="card-text">Want to see the latest articles about lorem ispum bacons and batmans ? Login and Go to articles !</p>
      <%= link_to 'Login', articles_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="card" style="width: 60rem;">
  <div class="card-block">
    <h1 class="card-title">Thanks </h4>
    <p class="card-text">This blog was created by Pedro with the help of Raul and Ale from Iugu!</p>
  </div>
</div>
